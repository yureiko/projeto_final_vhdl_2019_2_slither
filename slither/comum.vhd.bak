LIBRARY ieee;
USE ieee.std_logic_1164.all;

package comum is
	CONSTANT MAX_SNAKE_LENGTH: NATURAL:=5;
	CONSTANT INITIAL_LIVES: NATURAL:= 3;
	CONSTANT INITIAL_LENGTH: NATURAL:= 1;
	
   TYPE ESTADO_COBRA IS (PARADA, MORREU, ESQUERDA, DIREITA, SUBINDO, DESCENDO, DESAPARECE );
	TYPE ESTADO IS(ESPERANDO , JOGANDO, ACABOU);
	
	TYPE coord_type IS ARRAY (1 DOWNTO 0) OF NATURAL RANGE 0 TO 63; -- (x,y)
	TYPE posicao_type IS ARRAY(MAX_SNAKE_LENGTH-1 DOWNTO 0) OF coord_type; -- EXISTEM 'n' quadrados por cobras, portanto 'n' (x,y)
	
end package comum;
